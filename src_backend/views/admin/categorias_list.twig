{% extends 'admin/master_with_menu.twig' %}

{% block main_content %}

        <div class="page-header">
            <h1 class="">/{{ page_name }} <small>/{{ action }}</small></h1>
        </div>

        <!-- SEARCH-->
        <form class="navbar-form navbar-right page-header" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" required="required">
            </div>
            <button  type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
        </form>


        <!--TABLE-->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#id</th>
                    <th>Nome</th>
                    <th>Ordem</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for row in table %}
                    <tr>
                        <td>{{ row.id }}</td>
                        <td>{{ row.nome }}</td>
                        <td>{{ row.ordem }}</td>
                        <td>{{ row.descricao }}</td>
                        <td>

                            <a href="{{ siteUrl }}categorias/{{ row.id }}" class="btn btn-default btn-xs" title="EDIT">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>

                            <button type="button" class="btn btn-default btn-xs" title="REMOVE">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

        <ul class="pagination">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">»</a></li>
        </ul>

{% endblock %}