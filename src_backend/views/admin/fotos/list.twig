{% extends 'admin/master_with_menu.twig' %}

{% block main_content %}

        <div class="page-header">
            <h1 class="">/{{ page_name }} <small>/{{ action }}</small></h1>
            <a href="/admin/portfolio/create" id="submit-button" data-loading-text="Loading..."  class="btn btn-primary">Add New</a>
        </div>

        <!-- SEARCH-->
        <form action="{{ adminUrl }}portfolio/search/" class="form-searchable navbar-form navbar-right page-header" role="search">
            <div class="form-group">
                <input type="text" name="search-txt" id="search-txt" class="form-control" placeholder="Search" required="required">
            </div>
            <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
        </form>


        <!--TABLE-->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#id</th>
                    <th>Título</th>
                    <th>Categoria</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for row in table %}
                    <tr>
                        <td>{{ row.id }}</td>
                        <td>{{ row.titulo }}</td>
                        <td>{{ row.categorias.nome }}</td>
                        <td>{{ row.descricao }}</td>
                        <td>

                            <a href="{{ siteUrl }}/edit/{{ row.id }}" class ="btn btn-default btn-xs" title="EDIT">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>

                            <a href="#" data-toggle="modal" data-target="#confirm-modal" data-title="Attention" data-text="Do you really want to delete? There is no turning back..." data-href="{{ siteUrl }}/delete/{{ row.id }}" type="button" class="btn btn-default btn-xs" title="REMOVE">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

        {% if totalPages>1 %}
        <ul class="pagination">
            <li {% if currentPage==1 %} class="disabled" {% endif %}><a href="/admin/portfolio/page/{{ previousPage }}">&laquo;</a></li>
            {% for i in 1..totalPages %}
                <li {% if currentPage==i %}class="active"{% endif %}><a href="/admin/portfolio/page/{{ i }}">{{ i }}</a></li>
            {% endfor %}
            <li {% if currentPage==totalPages %} class="disabled" {% endif %}><a href="/admin/portfolio/page/{{ nextPage }}">»</a></li>
        </ul>
        {% endif %}
{% endblock %}