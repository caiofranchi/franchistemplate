{% extends 'admin/master_with_menu.twig' %}

{% block main_content %}

        <div class="page-header">
            <h1 class="">/{{ page_name }} <small>/{{ action }}</small></h1>
        </div>

        <!-- SEARCH-->
        <form action="{{ adminUrl }}contato/search/" class="form-searchable navbar-form navbar-right page-header" role="search">
            <div class="form-group">
                <input type="text" name="search-txt" id="search-txt" class="form-control" placeholder="Search" required="required">
            </div>
            <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
        </form>

        <!--TABLE-->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Mensagem</th>
                    <th>Curriculo?</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for row in table %}
                    <tr>
                        <td>{{ row.id }}</td>
                        <td>{{ row.nome }}</td>
                        <td>{{ row.email }}</td>
                        <td>{{ row.mensagem|nl2br }}</td>
                        <td>
                            {% if row.curriculo!='' %}
                            <a href="/assets/uploads/cv/{{ row.curriculo }}" target="_blank" class="btn btn-default btn-xs" title="EDIT">
                                <span class="glyphicon glyphicon-download"></span>
                            </a>
                                {% else %}
                                ---
                                {% endif %}
                        </td>
                        <td>

                            {#<a href="{{ adminUrl }}contato/edit/{{ row.id }}" class="btn btn-default btn-xs" title="EDIT">#}
                                {#<span class="glyphicon glyphicon-pencil"></span>#}
                            {#</a>#}

                            <a data-toggle="modal" data-target="#confirm-modal" data-title="Attention" data-text="Do you really want to delete? There is no turning back..." data-href="{{ adminUrl }}contato/delete/{{ row.id }}" href="#" type="button" class="btn btn-default btn-xs" title="REMOVE">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

        {% if totalPages>1 %}
        <ul class="pagination">
            <li {% if currentPage==1 %} class="disabled" {% endif %}><a href="{{ adminUrl }}contato/page/{{ previousPage }}">&laquo;</a></li>
            {% for i in 1..totalPages %}
                <li {% if currentPage==i %}class="active"{% endif %}><a href="{{ adminUrl }}contato/page/{{ i }}">{{ i }}</a></li>
            {% endfor %}
            <li {% if currentPage==totalPages %} class="disabled" {% endif %}><a href="{{ adminUrl }}contato/page/{{ nextPage }}">Â»</a></li>
        </ul>
        {% endif %}
{% endblock %}