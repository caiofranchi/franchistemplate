{% extends 'admin/master_with_menu.twig' %}

{% block main_content %}

        <div class="page-header">
            <h1 class="">/{{ page_name }} <small>/{{ action }}</small></h1>
        </div>

    <form action="{{ siteUrl }}" class="form-horizontal default-form-validation" role="form" method="post">
        {#<input type="hidden" name="_METHOD" value="PUT"/>#}
        <input type="hidden" name="id" value="{{ table.id }}"/>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="nome">Nome</label>
            <div class="col-sm-8">
                <input value="{{ table.nome }}" data-slug-target="#slug" type="text" class="form-control" id="nome" name="nome" placeholder="Coloque um nome pra categoria" required="required">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="slug">Slug (URL)</label>
            <div class="col-sm-8">
                <input value="{{ table.slug }}" type="text" class="form-control" id="slug" name="slug" required="required" placeholder="Esse é o nome que a URL terá">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" form="ordem">Ordem</label>
            <div class="col-sm-8">
                <input value="{% if table.ordem %}{{ table.ordem }}{% else %}{{ maxOrder }}{% endif %}" type="number" onkeypress="validateOnlyNumbers(event);" class="form-control" id="ordem" name="ordem" required="required" placeholder="Digite um número">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="descricao">Descrição</label>
            <div class="col-sm-8">
                <textarea class="form-control" rows="3" id="descricao" name="descricao">{{ table.descricao }}</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <!--                            $('#submit-button').button('loading')-->
                <button type="submit" id="submit-button" data-loading-text="Loading..."  class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>

{% endblock %}