{% extends 'admin/master_with_menu.twig' %}

{% block main_content %}

        <div class="page-header">
            <h1 class="">/{{ page_name }} <small>/{{ action }}</small></h1>
        </div>


    <form action="{{ siteUrl }}" class="form-horizontal default-form-validation" role="form" method="post">
                <input type="hidden" name="id" value="{{ table.id }}"/>

        
                            <div class="form-group">
                    <label class="col-sm-2 control-label" for="titulo">titulo</label>
                    <div class="col-sm-8">
                                                    <input value="{{ table.titulo }}" type="text" class="form-control" id="titulo" name="titulo" required="required" placeholder="">
                                            </div>
                </div>
            
        
                            <div class="form-group">
                    <label class="col-sm-2 control-label" for="descricao">descricao</label>
                    <div class="col-sm-8">
                                                    <textarea class="form-control" rows="3" id="descricao" name="descricao">{{ table.descricao }}</textarea>
                                            </div>
                </div>
            
        
                            <div class="form-group">
                    <label class="col-sm-2 control-label" for="thumb">thumb</label>
                    <div class="col-sm-8">
                                                    <input value="{{ table.thumb }}" type="text" class="form-control" id="thumb" name="thumb" required="required" placeholder="">
                                            </div>
                </div>
            
        
                            <div class="form-group">
                    <label class="col-sm-2 control-label" for="arquivo">arquivo</label>
                    <div class="col-sm-8">
                                                    <input value="{{ table.arquivo }}" type="text" class="form-control" id="arquivo" name="arquivo" required="required" placeholder="">
                                            </div>
                </div>
            
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <!--                            $('#submit-button').button('loading')-->
                <button type="submit" id="submit-button" data-loading-text="Loading..."  class="btn btn-primary">Save</button>
            </div>
        </div>

                                                                                                                                                        
                                                                                                                                                    
                                                                                                        </form>

{% endblock %}